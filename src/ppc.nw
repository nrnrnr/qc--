let load ~dst ~addr assn =
  let w = twidth dst in
  assert (w = 8 || w = 16 || w = 32 || w = 64);
  rtl (R.store (tloc dst) (memval assn w addr) w)

let store ~addr ~src assn =
  let w = twidth src in
  assert (w = 8 || w = 16 || w = 32 || w = 64);
  rtl (R.store (mem assn w addr) (tval src) w)
