Load immediate is a bit tricky because the PPC only allows 16-bit
constants to be loaded directly.
<<ppc postexpander>>=
let li ~dst const =
  let con w i = R.bits (B.S.of_int i w) w in
  match const with
  | RP.Bits b -> assert (B.width b = 32);
                 let b'    = if BO.lt b (B.zero 32) then BO.neg b else b in
                 let l     = R.bits (BO.lobits 16 b) 16 in
                 let h     = BO.lobits 16 (BO.shrl b' (B.S.of_int 16 32)) in
                 let dsthi = R.slice 16 16 (R.reg dst) in
                 tstore  dst   (R.app (R.opr "sx" [16;32]) [l]) <:>
                 rtl (R.store dsthi (R.bits h 16) 16)
  | _         -> tstore dst (Up.const const)
