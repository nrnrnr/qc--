  let succ = privatelabel machine lbl succ in
  match succ with
  | (First Entry, Last (Branch (_, lbl'))), blocks when lbl' =*= lbl -> 
      (First Entry, Last (Call call)), blocks
  | _ -> impossf "internal error in call constructor"
