let ocaml_syntax: Mangler.spec =
    { Mangler.preprocess = String.uncapitalize 
    ; Mangler.replace    = (fun c -> c) 
    ; Mangler.avoid      = (fun str -> str ^ "_")
    ; Mangler.reserved   = 
